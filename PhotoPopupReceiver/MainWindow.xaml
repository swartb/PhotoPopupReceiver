<Window x:Class="PhotoPopupReceiver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoPopupReceiver"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Photo Popup Receiver"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

            <CheckBox x:Name="AutoCopyCheckBox"
                  Content="Automatisch kopiëren naar klembord"
                  IsChecked="False"
                  Margin="0,0,0,10"
                  Checked="AutoCopyChanged"
                  Unchecked="AutoCopyChanged"/>

            <TextBox x:Name="UrlText"
         IsReadOnly="True"
         TextWrapping="Wrap"
         BorderThickness="0"
         Background="Transparent"
         Foreground="Gray"
         FontSize="12"
         Margin="0,10,0,0"/>

            <Button Content="Toon QR"
        Padding="14,6"
        Margin="0,10,0,10"
        Click="ShowQr_Click"
        HorizontalAlignment="Left"/>

            <Image x:Name="QrImage"
       Width="240"
       Height="240"
       Stretch="Uniform"
       Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
